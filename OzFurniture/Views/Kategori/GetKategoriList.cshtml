@using Furniture.ENTITIES.Concrete
@model List<Kategori>
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />
<table class="table table-bordered">
    <tr>
        <td>Id</td>
        <td>Adı</td>
        <td>Sırası</td>
        <td>Gorsel</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.KategoriId</td>
            <td>@item.KategoriAdi</td>
            <td>@item.KategoriDurumu</td>
            <td>@item.Gorsel</td>
        </tr>
    }
</table>
<br />
<a href="/Kategori/AddKategori" class="btn btn-info">Yeni Kategori</a>
